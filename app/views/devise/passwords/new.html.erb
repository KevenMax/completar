<center>
  <%= image_tag('logo-azul-completa.png', class: 'logo')%>
  <div class="container-header">
    <h2>Refinição de senha</h2>
  </div>
</center>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="container-form">

	  <div class="field">
	    <%= f.email_field :email, autofocus: true, required: true, class: 'input-auth', placeholder: 'E-mail' %>
	  </div>

	  <div class="actions">
	    <%= f.submit "AVANÇAR", class: 'btn btn-purple', style: 'margin-top: 30px;' %>
	  </div>
	</div>

	<div class="links">
		<center>
			<%= link_to "Entrar", new_session_path(resource_name), class: 'link-auth' %>
			<%= link_to(new_registration_path(resource_name)) do %>
          		Ainda não tem conta? <b>Cadastre-se!</b>
        	<% end %>
		</center>
	</div>

<% end %>
