<div class="container-default">
	<div class="container-header">
		<div class="row">
			<div class="col-12 col-sm-12">
				<h2> Dashboard </h2>
			</div>
		</div>
	</div>
	<div class="container-body">
		<div class="grafico">
			<div id="percentualConclusao" class="grafico-geral"></div>
		</div>

		<div class="container-list">
			<% @categorias_horas_realizadas_limite.each do |categoria| %>
				<div class="container-item">
					<div class="row">
						<div class="col-3">
						</div>

						<div class="col-lg-9">
						</div>
					</div>
				</div>

				<div class="container-item">
					<div class="row">
						<div class="col-3">
						</div>

						<div class="col-lg-9">
						</div>
					</div>
				</div>
			<% end %>
		</div>
	</div>
</div>

<script type="text/javascript">
	c3.generate({
        bindto: '#percentualConclusao',
        data:{
            columns: [
                ['', <%= @percentual_horas_complementares %>]
            ],

            type: 'gauge'
        },
        color:{
            pattern: ['#FFFFFF','#b275f4']

        }
    });
</script>