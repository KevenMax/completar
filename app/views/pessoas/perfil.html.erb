<div class="container-default">
	<div class="container-header">
		<div class="row">
			<div class="col-12 col-sm-12">
				<h2> Perfil </h2>
			</div>
		</div>
	</div>
	<div class="container-body">
		<div class="row">
			<div class="col-10">
				<%= image_tag((!@pessoa.foto) ? @pessoa.foto.url : 'avatar.png', class: 'image-profile') %>
			</div>
			<div class="col-2">
				<%= link_to(pessoas_editar_perfil_path, class: 'btn btn-purple btn-circle') do %>
					<i class="fa fa-pencil"></i>
				<% end %>
			</div>
		</div>

		<div class="container-info">

			<h1 class="info-apelido">
				<%= @pessoa.apelido %> 
			</h1>

			<h2 class="info-nome">
				<%= @pessoa.nome %> 
			</h2>

			<div class="row">
				<div class="col-12" style="margin-bottom: 10px;">
					<!-- <p style="margin: 0;">  -->
						<p class="label-attr"> Matricula:</p> 
						<p class="label-info"><%= @pessoa.matricula %></p> 
					<!-- </p> -->
					<hr style="margin: 0;">
				</div>
				<div class="col-12" style="margin-bottom: 10px;">
					<p style="margin: 0;"> 
						<label class="label-attr"> Curso:</label> 
						<label class="label-info"><%= @pessoa.curso.nome %></label> 
					</p>
					<hr style="margin: 0;">
				</div>

				<div class="col-12" style="margin-bottom: 10px;">
					<p style="margin: 0;"> 
						<label class="label-attr"> Campus:</label> 
						<label class="label-info"><%= @pessoa.campu.nome %></label> 
					</p>
					<hr style="margin: 0;">
				</div>

				<div class="col-12" style="margin-bottom: 10px;">
					<p style="margin: 0;"> 
						<label class="label-attr"> Contato:</label> 
						<label class="label-info"><%= @pessoa.contato %></label> 
					</p>
					<hr style="margin: 0;">
				</div>
			</div>

		</div>
	</div>
</div>

<%= stylesheet_link_tag 'pessoas' %>